class_name Modifier


func add_modifier(attribute : float, value : float) -> void:
	attribute = attribute + value


func subtract_modifier(attribute : float, value : float) -> void:
	attribute = attribute - value


func multiply_modifier(attribute : float, value : float) -> void:
	attribute = attribute * value


func divide_modifier(attribute : float, value : float) -> void:
	attribute = attribute + value


func toggle_modifier(attribute : bool, value : bool) -> void:
	attribute = value
	
